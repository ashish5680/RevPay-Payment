<%- include("../partials/header") %> 

<main class="container">
  <!-- Flash alert partial -->
  <%- include('../partials/flash.ejs'); %>

  <div class="container">
    <h1>Deposit Money</h1>

    <form action="/account/<%= account._id %>/deposit" method="POST">
      <div class="form-group">
        <label for="beneficiaryAccountNumber">Enter Beneficiary Account Number</label>
        <input type="number" id="beneficiaryAccountNumber" name="beneficiaryAccountNumber" class="form-control" placeholder="Enter Beneficiary Account Number" required>
      </div>

      <div class="form-group">
        <label for="beneficiarySortCode">Enter Beneficiary Sort Code</label>
        <input type="number" id="beneficiarySortCode" name="beneficiarySortCode" class="form-control" placeholder="Enter Beneficiary Sort Code" required>
      </div>

      <div class="form-group">
        <label for="amount">Enter Amount</label>
        <input type="number" id="amount" name="amount" class="form-control" placeholder="Enter Amount" required>
      </div>

      <button type="submit" class="btn btn-primary">Deposit</button>
    </form>
  </div>
</main>

<%- include("../partials/footer") %>
