<%- include("../partials/header") %> 

<main class="container">
  <!-- Flash alert partial -->
  <%- include('../partials/flash.ejs'); %>

  <div class="container">
    <h1>Edit Account Settings</h1>
    <div class="card">
      <div class="card-header">
        <h5 class="card-title mb-0">Account Details</h5>
      </div>
      <div class="card-body">
        <ul class="list-group">
          <li class="list-group-item"><strong>Account Number:</strong> <%= account.accountNumber %></li>
          <li class="list-group-item"><strong>Sort Code:</strong> <%= account.sortCode %></li>
        </ul>
      </div>
    </div>
    <form action="/account/<%= account._id %>?_method=PATCH" method="POST" class="mt-3">
      <div class="form-group">
        <label for="activationStatus">Activation Status</label>
        <select id="activationStatus" name="activationStatus" class="form-control">
          <option value="ACTIVE" <%= account.activationStatus === 'ACTIVE' ? 'selected' : '' %>>ACTIVE</option>
          <option value="INACTIVE" <%= account.activationStatus === 'INACTIVE' ? 'selected' : '' %>>INACTIVE</option>
        </select>
      </div>
      <div class="form-group">
        <label for="allowCredit">Allow Credit</label>
        <select id="allowCredit" name="allowCredit" class="form-control">
          <option value="true" <%= account.allowCredit ? 'selected' : '' %>>Yes</option>
          <option value="false" <%= !account.allowCredit ? 'selected' : '' %>>No</option>
        </select>
      </div>
      <div class="form-group">
        <label for="allowDebit">Allow Debit</label>
        <select id="allowDebit" name="allowDebit" class="form-control">
          <option value="true" <%= account.allowDebit ? 'selected' : '' %>>Yes</option>
          <option value="false" <%= !account.allowDebit ? 'selected' : '' %>>No</option>
        </select>
      </div>
      <div class="form-group">
        <label for="dailyWithdrawalLimit">Daily Withdrawal Limit</label>
        <input type="number" id="dailyWithdrawalLimit" name="dailyWithdrawalLimit" class="form-control" value="<%= account.dailyWithdrawalLimit %>" required>
      </div>
      <button type="submit" class="btn btn-primary">Update Account</button>
    </form>
  </div>
</main>

<%- include("../partials/footer") %>
